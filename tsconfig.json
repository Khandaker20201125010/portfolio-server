{
  // Docs: https://aka.ms/tsconfig
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",     // your source folder
    "outDir": "./dist",     // compiled JS output

    /* Environment */
    "module": "commonjs",   // better for Node.js + Express
    "target": "es2020",     // modern Node features
    "lib": ["esnext"],      // latest JS APIs
    "types": ["node"],      // Node.js global types

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Node.js Specific */
    "esModuleInterop": true,     // allow import express from "express"
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"],     // compile all files in src
  "exclude": ["node_modules", "dist"] // ignore these
}
